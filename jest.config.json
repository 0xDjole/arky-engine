{
    "testEnvironment": "node",
    "testMatch": [
        "**/__tests__/**/*.+(ts|tsx)",
        "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "globals": {
        "ts-jest": {
            "isolatedModules": true
        }
    },
    "setupFiles": ["dotenv/config"],
    "transform": { "\\.ts$": ["ts-jest"] },
    "modulePathIgnorePatterns": ["<rootDir>/dist/"],
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"]
}
